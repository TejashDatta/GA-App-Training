<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div id='error_explanation'>
      <h2><%= t('errors_caused_save_failure', error_count: article.errors.count) %></h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='field'>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class='field'>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class='actions'>
    <%= form.submit %>
  </div>
<% end %>
